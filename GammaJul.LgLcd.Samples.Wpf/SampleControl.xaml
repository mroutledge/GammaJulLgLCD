<UserControl
	x:Class="GammaJul.LgLcd.Samples.Wpf.SampleControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="320" Height="240">
	
	<Grid>
		<Image x:Name="Img" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill" />
		<Path VerticalAlignment="Center" HorizontalAlignment="Left" Fill="#20FFFFFF" Stroke="#AAFFFFFF"
					Data="M8,0 L0,7 L8,14 Z" Margin="4,0,0,0" />
		<Path VerticalAlignment="Center" HorizontalAlignment="Right" Fill="#20FFFFFF" Stroke="#AAFFFFFF"
					Data="M0,0 L8,7 L0,14 Z" Margin="0,0,4,0" />
	</Grid>
</UserControl>
